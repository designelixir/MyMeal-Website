<!doctype html>
<html>
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">

    <!-- include system scripts, page meta, and header code injection -->
    {squarespace-headers}
  </head>
  <body id="{squarespace.page-id}" class="{squarespace.page-classes}">

    <div class="site-container">

      <header class="site-header">
        <squarespace:navigation navigationId="siteNav" template="site-navigation" />        
      </header>
    
    <div id="heroBlock" class="flex-center-center">
        <div class="heroText-wrapper">
            <squarespace:block-field id="heroText" columns="12" />
            <div class="heroDownload-wrapper flex-center-start">
                {@|apply download.block}  
            </div>
        </div>
        <img id="heroImg" src="https://images.squarespace-cdn.com/content/v1/6450698409f0fa360c02e549/3d5d4bd4-18a6-446d-9c45-0a746ad08ae6/menu-preview.png?format=750w"/>
      </div>

      <div id="howItWorksBlock">
        <squarespace:block-field id="howItWorksTitle" columns="1" />
        <div class="flex-start-center" id="howItWorksBlock-wrapper">
            <div class="howItWorksBlock-item flex-center-center flex-column">
                <squarespace:block-field id="howItWorksImg1" class="howItWorksBlock-img" columns="1" />
                <squarespace:block-field id="howItWorks1" columns="1" />
            </div>
            <div class="howItWorksBlock-item flex-center-center flex-column">
                <squarespace:block-field id="howItWorksImg2" class="howItWorksBlock-img" columns="1" />
                <squarespace:block-field id="howItWorks2" columns="1" />
            </div>
            <div class="howItWorksBlock-item flex-center-center flex-column">
                <squarespace:block-field id="howItWorksImg3" class="howItWorksBlock-img" columns="1" />
                <squarespace:block-field id="howItWorks3" columns="1" />
            </div>
        </div>
      </div>

      <div id="createPositiveExperienceBlock">
        {@|apply restaurantsSnippet.block}
      </div>
    
    <div class="feature-container">
        <h2>Featured In</h2>
        <div class="feature-wrapper box-shadow">
        <squarespace:query collection="press" >
        <div class="flex-start-center flex-wrap">
        {.repeated section items}
            {.if starred}
                {.repeated section tags}
                    {.equal? "Article"}
                        <div class="press-item-container flex-center-center flex-column hover " onclick="window.open('{sourceUrl}', '_blank')">
                            <div class="article-item-img" style="background-image: url('{assetUrl}?format=original');"></div>
                            <a href="{sourceUrl}" class="press-title" style="color: gray!important;" target="_blank">{title}</a>
                        </div>
                    
                    {.end}
                    {.or equal? "Podcast"}
                    <p>Content specific to my category 2.</p>
                    
                {.end}
            {.end}
        {.end}
        </div>
        </squarespace:query>

        <div style="width: 80%; opacity: 0.5; margin: 25px 10%; ">
            <hr>
        </div>
            

            <squarespace:query collection="press" >
        <div class="flex-start-center flex-wrap">
        {.repeated section items}
            {.if starred}
                {.repeated section tags}
                    {.equal? "Podcast"}
                        <div class="press-item-container flex-center-center flex-column hover" style="max-width: 200px!important" onclick="window.open('{sourceUrl}', '_blank')">
                            <div class="podcast-item-img" style="background-image: url('{assetUrl}');"></div>
                            <a href="{sourceUrl}" class="press-title"  style="font-weight: 600!important; font-style: normal!important; margin-top: 10px;" target="_blank">{title}</a>
                            <span class="press-item-excerpt">{excerpt}</span>
                        </div>
                    
                    {.end}
                    {.or equal? "Article"}
                    {.end}
            {.end}
        {.end}
        </div>
        
        </squarespace:query>
            
        </div>
    </div>

      <!-- cms content injection point -->
      <main class="content-container" role="main" data-content-field="main-content">
      {squarespace.main-content}
       
      </main>

      

      <!--Footer with open block field -->
      <footer class="site-footer">
        <squarespace:block-field id="footerBlocks" columns="12" />
      </footer>

    </div>

    <!-- combo and minify scripts when not logged in -->
    <squarespace:script src="site.js" combo="{.if authenticatedAccount}false{.or}true{.end}" />

    <!-- other scripts, and footer code injection -->
    {squarespace-footers}

  </body>
</html>
