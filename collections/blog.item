<a class="styled-button hover" href="/blog">&larr; Back to Blog</a>
<br>
{.section item}

<article id="post-{id}" class="{@|item-classes} blog-page" data-item-id="{id}">
<div class="blog-page-header" style="background-image:url({assetUrl})">
  <div class="blog-page-title">
  <h1>{title}</h1>
  <p class="meta">
    <a href="{fullUrl}" class="permalink" ><time datetime="{addedOn|date %F}">{addedOn|date %B %d, %Y}</time></a> by <a href="{collection.fullUrl}?author={author.id}">{author.displayName}</a>
  </p>
  {.repeated section categories}
      <a class="category" href="{collection.fullUrl}?category={category.id}">{category}</a>{.alternates with},
    {.end}

    <!--TAGS-->
    {.repeated section tags}
      <a class="tag" href="{collection.fullUrl}?tag={@|url-encode}">{@}</a>{.alternates with},
    {.end}
  </div>
</div>
    <!--AUTHOR AND DATE-->
    

    <!--MAIN CONTENT-->
    {body}
   
 <div class="blog-author-container box-shadow flex-start-start">
    
    <div style="height: 100px; width: 100px; border-radius: 50px; border: 2px solid red; background-image: url({avatarUrl}); background-size: cover; background-position: center center;">
    </div>
    
    <div style="margin-left: 25px;">
    <p style="font-size: 16px;">Meet the author, <span style="font-weight: 500; color: var(--blue)">{author.displayName}</span></p>
    <p>{author.bio}</p>
    </div>
    </div>

    <!--BLOG INJECTION-->
    {postItemInjectCode}

  </article>

  

{.end}


<!--PAGINATION-->
{.section pagination}
  <nav class="blog-item-pagination flex-center-spacebetween">

    

    <!--NEWER PAGE-->
    {.section prevItem}
      <a href="{fullUrl}" class="styled-button">&larr; Newer </a>
    {.or}
      <a class="disabled" class="styled-button">&larr; Newer</a>
    {.end}



    <!--OLDER PAGE-->
    {.section nextItem}
      <a href="{fullUrl}" class="styled-button">Older &rarr; </a>
    {.or}
      <a class="disabled" class="styled-button">Older &rarr;</a>
    {.end}

  </nav>
{.end}

