
<script>
  var allCoordinates = []
</script>
 
<div class="flex-start-start flex-wrap directory-wrapper">

{.repeated section items}

<script>
  var lat = location.markerLat;
  var long = location.markerLng;
  var coordinate = {lat:{location.markerLat}, lng: {location.markerLng}}
  allCoordinates.push(coordinate);
</script>



  {.if customContent.verified}
 <article id="post-{id}" class="directory-list-item hover verified-item box-shadow {categories} {@|item-classes}" data-item-id="{id}" >
    {.main-image?}
      <div class="directory-image flex-start-end" style="background-image:url({assetUrl})">
        <img class="verified-badge hover" src="../assets/verified-mymeal.png">
      </div>
      
    {.end}
    <div class="directory-logo-wrapper flex-center-start">
        {.if customContent.brandlogo}
            <div class="directory-logo box-shadow" style="background-image: url({customContent.brandlogo.assetUrl})"></div> 
        {.end}
        <p class="directory-city hover" onclick="window.open('https://www.google.com/maps/search/{location.addressTitle} {location.addressLine1} {location.addressLine2}', '_blank')">üìç {location.addressLine2}</p>
    </div>
    <div class="directory-info-container">
        <div class="flex-center-spacebetween">
            <p class="blog-title" data-content-field="title">{title}</p>
        </div>
        <p class="flex-center-start flex-wrap" style="margin: 7px 0px;">
        {customContent.priceRank}  
        {.if categories }&nbsp;‚Ä¢&nbsp;{.end}
        {.repeated section categories}
            <a class="category-label drop-shadow" href="{collection.fullUrl}?tag={@|url-encode}">{categories}</a>
        {.end}
        </p>
    </div>
    <div class="flex-center-center directory-buttons">
        <button onclick="window.open('{sourceUrl}')" class="large-button styled-button">Allergen Menu</button>
        <button onclick="window.open('{fullUrl}')" class="large-button styled-button-inverted">Details</button>
    </div>
    
  </article>
  
  {#  NOT verified card  }
  {.or}
   <article id="post-{id}" class="directory-list-item unverified-restaurant hover box-shadow {categories} {@|item-classes}" data-item-id="{id}">
    <div class="directory-image" style="background-image:url('../assets/not-verified.png')"></div>
    <div class="directory-logo-wrapper">
        {.if customContent.brandlogo}<div class="directory-logo" style="background-image: url({customContent.brandlogo.assetUrl})"></div>{.end}
    </div>
    <div class="directory-info-container">
        <div class="flex-center-spacebetween">
            <p class="blog-title" data-content-field="title">{title}</p>
        </div>
        <p class="flex-center-start flex-wrap" style="margin: 7px 0px;">
        {customContent.priceRank}  
        {.if categories }&nbsp;‚Ä¢&nbsp;{.end}
        {.repeated section categories}
            <a class="category-label drop-shadow" href="{collection.fullUrl}?tag={@|url-encode}">{categories}</a>
        {.end}
        </p>
    </div>
    <div class="flex-center-center directory-buttons">
        <button class="styled-button large-button" onclick="https://form.jotform.com/230596919059065?restaurantName={title}">Request Restaurant</button>
        <button onclick="window.open('{fullUrl}')" class="large-button styled-button-inverted">Details</button>
    </div>
  </article>
   
  {.end}

{.or}

  <!-- no items means no blog posts -->
  <p><em>No blog posts yet.</em></p>

{.end}
</div>
<!-- pagination -->
{.if pagination}
  <nav class="blog-list-pagination">

    <!-- newer page -->
    {.if pagination.prevPage}
      <a href="{pagination.prevPageUrl}">Newer</a>
    {.or}
      <a class="disabled">Newer</a>
    {.end}

    <!-- older page -->
    {.if pagination.nextPage}
      <a href="{pagination.nextPageUrl}">Older</a>
    {.or}
      <a class="disabled">Older</a>
    {.end}

  </nav>
{.end}

